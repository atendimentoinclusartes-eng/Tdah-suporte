                            <label for="task-alarm">Lembrete</label>
                            <select id="task-alarm" class="form-control">
                                <option value="none">Sem lembrete</option>
                                <option value="5min">5 minutos antes</option>
                                <option value="15min">15 minutos antes</option>
                                <option value="30min" selected>30 minutos antes</option>
                                <option value="1h">1 hora antes</option>
                                <option value="1day">1 dia antes</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-footer">
                    <button class="btn btn-secondary" id="cancel-task">Cancelar</button>
                    <button class="btn btn-primary" id="save-task">Salvar Tarefa</button>
                </div>
            </div>
        </div>
        
        <!-- Formulário para adicionar estudo -->
        <div class="form-overlay" id="study-form">
            <div class="form-container">
                <div class="form-header">
                    <h3>Nova Tarefa de Estudo</h3>
                    <button class="close-form" id="close-study-form">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="form-body">
                    <div class="form-group">
                        <label for="study-title">Título da Atividade</label>
                        <input type="text" id="study-title" class="form-control" placeholder="Ex: Entregar trabalho final">
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="study-course">Curso</label>
                            <input type="text" id="study-course" class="form-control" placeholder="Nome do curso">
                        </div>
                        <div class="form-group">
                            <label for="study-institution">Instituição</label>
                            <input type="text" id="study-institution" class="form-control" placeholder="Nome da instituição">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="study-details">Detalhes da Atividade</label>
                        <textarea id="study-details" class="form-control" rows="3" placeholder="Descrição da atividade, requisitos, etc..."></textarea>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="study-duedate">Data de Entrega</label>
                            <input type="date" id="study-duedate" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="study-duetime">Hora Limite</label>
                            <input type="time" id="study-duetime" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="study-alarm">Lembrete com Antecedência</label>
                        <select id="study-alarm" class="form-control">
                            <option value="1day">1 dia antes</option>
                            <option value="2days" selected>2 dias antes</option>
                            <option value="3days">3 dias antes</option>
                            <option value="1week">1 semana antes</option>
                            <option value="2weeks">2 semanas antes</option>
                        </select>
                    </div>
                </div>
                <div class="form-footer">
                    <button class="btn btn-secondary" id="cancel-study">Cancelar</button>
                    <button class="btn btn-primary" id="save-study">Salvar Atividade</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Elementos da interface
        const navItems = document.querySelectorAll('.nav-item');
        const tabContents = document.querySelectorAll('.tab-content');
        const currentDateElement = document.getElementById('current-date');
        
        // Form overlays
        const taskForm = document.getElementById('task-form');
        const studyForm = document.getElementById('study-form');
        
        // Botões para abrir formulários
        const addTaskBtn = document.getElementById('add-task-btn');
        const addStudyBtn = document.getElementById('add-study-btn');
        const addCycleBtn = document.getElementById('add-cycle-btn');
        const addMedicationBtn = document.getElementById('add-medication-btn');
        const quickAddBtn = document.getElementById('quick-add-btn');
        
        // Botões para fechar formulários
        const closeTaskForm = document.getElementById('close-task-form');
        const closeStudyForm = document.getElementById('close-study-form');
        const cancelTask = document.getElementById('cancel-task');
        const cancelStudy = document.getElementById('cancel-study');
        
        // Botões para salvar
        const saveTask = document.getElementById('save-task');
        const saveStudy = document.getElementById('save-study');
        
        // Data atual
        const now = new Date();
        const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        currentDateElement.textContent = now.toLocaleDateString('pt-BR', options);
        
        // Navegação entre abas
        navItems.forEach(item => {
            item.addEventListener('click', () => {
                const tabId = item.getAttribute('data-tab');
                
                // Atualiza navegação
                navItems.forEach(nav => nav.classList.remove('active'));
                item.classList.add('active');
                
                // Atualiza conteúdo
                tabContents.forEach(content => {
                    content.classList.remove('active');
                });
                
                document.getElementById(tabId).classList.add('active');
            });
        });
        
        // Abrir formulários
        addTaskBtn.addEventListener('click', () => {
            taskForm.style.display = 'flex';
        });
        
        addStudyBtn.addEventListener('click', () => {
            studyForm.style.display = 'flex';
        });
        
        addCycleBtn.addEventListener('click', () => {
            alert('Funcionalidade de ciclo menstrual em desenvolvimento!');
        });
        
        addMedicationBtn.addEventListener('click', () => {
            alert('Funcionalidade de medicação em desenvolvimento!');
        });
        
        quickAddBtn.addEventListener('click', () => {
            // Abre o formulário baseado na aba atual
            const activeTab = document.querySelector('.nav-item.active').getAttribute('data-tab');
            
            if (activeTab === 'tasks') {
                taskForm.style.display = 'flex';
            } else if (activeTab === 'study') {
                studyForm.style.display = 'flex';
            } else if (activeTab === 'cycle') {
                alert('Funcionalidade de ciclo menstrual em desenvolvimento!');
            } else if (activeTab === 'medication') {
                alert('Funcionalidade de medicação em desenvolvimento!');
            }
        });
        
        // Fechar formulários
        closeTaskForm.addEventListener('click', () => {
            taskForm.style.display = 'none';
        });
        
        closeStudyForm.addEventListener('click', () => {
            studyForm.style.display = 'none';
        });
        
        cancelTask.addEventListener('click', () => {
            taskForm.style.display = 'none';
        });
        
        cancelStudy.addEventListener('click', () => {
            studyForm.style.display = 'none';
        });
        
        // Salvar tarefa
        saveTask.addEventListener('click', () => {
            const title = document.getElementById('task-title').value;
            const details = document.getElementById('task-details').value;
            const date = document.getElementById('task-date').value;
            const time = document.getElementById('task-time').value;
            const category = document.getElementById('task-category').value;
            const alarm = document.getElementById('task-alarm').value;
            
            if (!title) {
                alert('Por favor, preencha o título da tarefa.');
                return;
            }
            
            // Criar nova tarefa
            const tasksList = document.getElementById('tasks-list');
            const newTask = document.createElement('div');
            newTask.className = 'task-card';
            
            // Determinar categoria para cor da borda
            let borderClass = '';
            if (category === 'finance') borderClass = 'urgent';
            else if (category === 'health') borderClass = 'warning';
            
            if (borderClass) newTask.classList.add(borderClass);
            
            // Formatar hora
            let displayTime = time;
            if (!time && date) {
                displayTime = 'Dia todo';
            } else if (time && date) {
                const timeParts = time.split(':');
                displayTime = `${timeParts[0]}:${timeParts[1]}`;
            }
            
            // Formatar data
            let displayDate = 'Hoje';
            if (date) {
                const taskDate = new Date(date);
                const today = new Date();
                const tomorrow = new Date(today);
                tomorrow.setDate(tomorrow.getDate() + 1);
                
                if (taskDate.toDateString() === today.toDateString()) {
                    displayDate = 'Hoje';
                } else if (taskDate.toDateString() === tomorrow.toDateString()) {
                    displayDate = 'Amanhã';
                } else {
                    displayDate = taskDate.toLocaleDateString('pt-BR', { day: 'numeric', month: 'short' });
                }
            }
            
            newTask.innerHTML = `
                <div class="card-header">
                    <div class="card-title">${title}</div>
                    <div class="card-time">${displayDate} ${time ? '• ' + displayTime : ''}</div>
                </div>
                <div class="card-details">
                    ${details || 'Sem detalhes adicionais.'}
                </div>
                <div class="card-footer">
                    <div class="card-tag">${getCategoryName(category)}</div>
                    <div>
                        <i class="fas fa-bell alarm-icon"></i>
                        <span style="margin-left: 5px; font-size: 0.9rem;">${getAlarmText(alarm)}</span>
                    </div>
                </div>
            `;
            
            // Adicionar à lista
            tasksList.prepend(newTask);
            
            // Fechar formulário e resetar
            taskForm.style.display = 'none';
            document.getElementById('task-title').value = '';
            document.getElementById('task-details').value = '';
            document.getElementById('task-date').value = '';
            document.getElementById('task-time').value = '';
            
            // Mostrar mensagem de confirmação
            showNotification('Tarefa adicionada com sucesso!');
        });
        
        // Salvar estudo
        saveStudy.addEventListener('click', () => {
            const title = document.getElementById('study-title').value;
            const course = document.getElementById('study-course').value;
            const institution = document.getElementById('study-institution').value;
            const details = document.getElementById('study-details').value;
            const duedate = document.getElementById('study-duedate').value;
            const duetime = document.getElementById('study-duetime').value;
            const alarm = document.getElementById('study-alarm').value;
            
            if (!title) {
                alert('Por favor, preencha o título da atividade.');
                return;
            }
            
            // Criar novo estudo
            const studyList = document.getElementById('study-list');
            const emptyStudy = document.getElementById('empty-study');
            const newStudy = document.createElement('div');
            newStudy.className = 'study-card';
            
            // Formatar data de entrega
            let displayDate = 'Data não definida';
            if (duedate) {
                const due = new Date(duedate);
                displayDate = due.toLocaleDateString('pt-BR', { day: 'numeric', month: 'short' });
                if (duetime) {
                    const timeParts = duetime.split(':');
                    displayDate += ` • ${timeParts[0]}:${timeParts[1]}`;
                }
            }
            
            newStudy.innerHTML = `
                <div class="card-header">
                    <div class="card-title">${title}</div>
                    <div class="card-time">${displayDate}</div>
                </div>
                <div class="card-details">
                    <strong>Curso:</strong> ${course || 'Não informado'}<br>
                    <strong>Instituição:</strong> ${institution || 'Não informada'}<br>
                    <strong>Atividade:</strong> ${details || 'Sem detalhes adicionais.'}
                </div>
                <div class="card-footer">
                    <div class="card-tag">${duedate ? isUrgent(duedate) ? 'Urgente' : 'Estudo' : 'Pendente'}</div>
                    <div>
                        <i class="fas fa-bell alarm-icon"></i>
                        <span style="margin-left: 5px; font-size: 0.9rem;">${getStudyAlarmText(alarm)}</span>
                    </div>
                </div>
            `;
            
            // Adicionar à lista
            studyList.prepend(newStudy);
            
            // Esconder mensagem de lista vazia se existir
            if (emptyStudy.style.display === 'block') {
                emptyStudy.style.display = 'none';
            }
            
            // Fechar formulário e resetar
            studyForm.style.display = 'none';
            document.getElementById('study-title').value = '';
            document.getElementById('study-course').value = '';
            document.getElementById('study-institution').value = '';
            document.getElementById('study-details').value = '';
            document.getElementById('study-duedate').value = '';
            document.getElementById('study-duetime').value = '';
            
            // Mostrar mensagem de confirmação
            showNotification('Atividade de estudo adicionada!');
        });
        
        // Funções auxiliares
        function getCategoryName(category) {
            const categories = {
                'general': 'Geral',
                'health': 'Saúde',
                'finance': 'Finanças',
                'home': 'Casa',
                'work': 'Trabalho'
            };
            return categories[category] || 'Geral';
        }
        
        function getAlarmText(alarm) {
            const alarms = {
                'none': 'Sem lembrete',
                '5min': '5min antes',
                '15min': '15min antes',
                '30min': '30min antes',
                '1h': '1h antes',
                '1day': '1 dia antes'
            };
            return alarms[alarm] || 'Sem lembrete';
        }
        
        function getStudyAlarmText(alarm) {
            const alarms = {
                '1day': '1 dia antes',
                '2days': '2 dias antes',
                '3days': '3 dias antes',
                '1week': '1 semana antes',
                '2weeks': '2 semanas antes'
            };
            return alarms[alarm] || '2 dias antes';
        }
        
        function isUrgent(dateString) {
            const dueDate = new Date(dateString);
            const today = new Date();
            const diffTime = dueDate - today;
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            return diffDays <= 3;
        }
        
        function showNotification(message) {
            // Criar elemento de notificação
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                left: 50%;
                transform: translateX(-50%);
                background-color: var(--primary);
                color: white;
                padding: 12px 24px;
                border-radius: var(--radius-small);
                box-shadow: var(--shadow);
                z-index: 2000;
                font-weight: 600;
                transition: all 0.3s;
            `;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            // Remover após 3 segundos
            setTimeout(() => {
                notification.style.opacity = '0';
                notification.style.transform = 'translateX(-50%) translateY(-20px)';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }
        
        // Preencher datas com valores padrão
        window.onload = function() {
            // Definir data de hoje como padrão nos formulários
            const today = new Date();
            const todayFormatted = today.toISOString().split('T')[0];
            
            document.getElementById('task-date').value = todayFormatted;
            document.getElementById('task-date').min = todayFormatted;
            
            // Data padrão para estudos: 7 dias a partir de hoje
            const nextWeek = new Date(today);
            nextWeek.setDate(nextWeek.getDate() + 7);
            const nextWeekFormatted = nextWeek.toISOString().split('T')[0];
            
            document.getElementById('study-duedate').value = nextWeekFormatted;
            document.getElementById('study-duedate').min = todayFormatted;
            
            // Hora padrão: próxima hora redonda
            const nextHour = new Date();
            nextHour.setHours(nextHour.getHours() + 1, 0, 0, 0);
            const timeString = nextHour.toTimeString().substring(0, 5);
            
            document.getElementById('task-time').value = timeString;
            document.getElementById('study-duetime').value = '23:59';
        };
        
        // Simular funcionalidade de IA aprendendo com o uso
        document.querySelectorAll('.task-card, .study-card, .medication-card').forEach(card => {
            card.addEventListener('click', function() {
                // Simular aprendizado da IA com interação do usuário
                if (Math.random() > 0.7) { // 30% de chance de mostrar sugestão
                    const aiSuggestion = document.querySelector('.ai-suggestion .ai-text');
                    if (aiSuggestion) {
                        const suggestions = [
                            "Percebi que você interage mais com tarefas relacionadas a saúde. Quer que eu priorize esses lembretes?",
                            "Você costuma completar tarefas no período da manhã. Posso sugerir agendamentos nesse horário?",
                            "Notei que você adia tarefas de estudo. Que tal dividi-las em partes menores?",
                            "Com base no seu histórico, você tem mais produtividade às quartas-feiras. Posso ajustar sua agenda?"
                        ];
                        
                        const randomSuggestion = suggestions[Math.floor(Math.random() * suggestions.length)];
                        aiSuggestion.textContent = randomSuggestion;
                    }
                }
            });
        });
    </script>
</body>
</html>
```